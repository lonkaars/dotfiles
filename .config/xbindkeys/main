	Print
"addtoqueue"
	Mod4 + a



"pactl set-sink-volume @DEFAULT_SINK@ -5%"
	Mod1+Mod4+minus
"pactl set-sink-volume @DEFAULT_SINK@ +5%"
	Mod1+Mod4+equal

"pactl set-sink-volume @DEFAULT_SINK@ +5%"
	XF86AudioRaiseVolume
"pactl set-sink-volume @DEFAULT_SINK@ -5%"
	XF86AudioLowerVolume
"pactl set-sink-mute @DEFAULT_SINK@ toggle"
	XF86AudioMute

"playerctl play-pause"
	XF86AudioPlay
"playerctl next"
	XF86AudioNext
"playerctl previous"
	XF86AudioPrev

"mpc toggle"
	Mod1+Mod4+k
"mpc next"
	Mod1+Mod4+l
"mpc prev"
	Mod1+Mod4+j



