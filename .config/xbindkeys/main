	Mod4 + j
"i3-msg focus up"
	Mod4 + k
"i3-msg focus right"
	Mod4 + l

"i3-msg move left"
	Mod4 + Shift + h
"i3-msg move down"
	Mod4 + Shift + j
"i3-msg move up"
	Mod4 + Shift + k
"i3-msg move right"
	Mod4 + Shift + l

"i3-msg resize grow width 10 px"
	Mod4 + period
"i3-msg resize shrink width 10 px"
	Mod4 + comma
"i3-msg resize grow height 10 px"
	Mod4 + bracketright
"i3-msg resize shrink height 10 px"
	Mod4 + bracketleft

"i3-msg kill" 
	Mod4 + q

"i3-msg reload"
