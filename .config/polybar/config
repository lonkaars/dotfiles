[global/wm]
margin-bottom = 50
margin-top = 0

[bar/main]

tray-position = right
tray-padding = ${barsettings.padding}
tray-background = ${color.bg}
tray-margin = 8

monitor =
monitor-fallback =
monitor-strict = false

override-redirect = false

bottom = false
fixed-center = true

width = 100%
height = 24
offset-x = 0
offset-y = 0

background = ${color.bg}
foreground = ${color.fg}

radius-top = 0.0
radius-bottom = 0.0

padding = 3

module-margin-left = 1
module-margin-right = 1

font-0 = "JetBrains Mono Nerd Font:pixelsize=9:weight=regular:size=0;2"
font-1 = "JetBrains Mono Nerd Font:pixelsize=9:weight=bold:size=0;2"
font-2 = "Material Design Icons:size=12;2"

modules-left = time date 
modules-center = weather mpd
modules-right = alsa whoami

separator =

spacing = 0

dim-value = 1.0

wm-name = 

locale = 

