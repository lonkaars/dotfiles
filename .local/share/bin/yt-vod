#!/bin/sh
vid="$1"
if [ -z "$vid" ] ; then
	echo "usage: $0 <stream ID>"
	exit 1
fi

url="https://youtube.com/watch?v=$vid"

# download chat
screen -d -m -S "yt-$vid-chat" -- yt-dlp --live-from-start --write-sub --no-download "$url"

# download stream
screen -d -m -S "yt-$vid-vod" -- yt-dlp --live-from-start -S ext "$url"

echo "started recording! (use screen -r yt-$vid-<tab> to stop)"

